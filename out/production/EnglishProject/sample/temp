package sample;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.Pane;
import javafx.scene.layout.StackPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import javafx.scene.text.Font;
import javafx.scene.text.FontPosture;
import javafx.scene.text.FontWeight;
import javafx.stage.Stage;

import java.awt.Dimension;
import java.awt.Toolkit;


public class Main extends Application {

    @Override
    public void start(Stage primaryStage) {
        double[] sizes = sizeDisplay();

        Pane pane = new Pane();

        Rectangle rectangle = new Rectangle();
        rectangle.setWidth(sizes[0]);
        rectangle.setHeight(sizes[1] / 3);
        rectangle.setArcWidth(20);
        rectangle.setArcHeight(20);
        rectangle.setX(0);
        rectangle.setY(0);
        rectangle.setStyle("-fx-stroke: blueviolet; -fx-fill: blueviolet; ");

        Label label = new Label("English A2");
        label.setFont(Font.font(20));
        label.setTranslateY(sizes[1] / 14);
        label.setTranslateX(sizes[0] / 15);
        label.setFont(Font.font("Helvetica", FontWeight.NORMAL, FontPosture.ITALIC, 65));
        label.setTextFill(new Color(1,1,1,1));


        Button br= new Button("Start");
        br.setTranslateX((sizes[0] / 2.2));
        br.setTranslateY(sizes[1] / 2);


        pane.getChildren().add(rectangle);
        pane.getChildren().add(label);
        pane.getChildren().add(br);
        Scene scene = new Scene(pane, sizes[0], sizes[1]);
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    public static double[] sizeDisplay(){
        Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
        double width = screenSize.getWidth();
        double height = screenSize.getHeight();
        return new double[]{width * 0.6, height * 0.6};
    }


    public static void main(String[] args) {
        launch(args);
    }
}
